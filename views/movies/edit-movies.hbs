<div>
  <h2>Pagina de actualizar</h2>

  <form action="/movies/{{detailsUpdate._id}}/update" method="POST">

    <label for="title">Title: </label>
    <input type="text" name="title" value="{{detailsUpdate.title}}"/>
    <br />
    <label for="genre">Genre: </label>
    <input type="text" name="genre" value="{{detailsUpdate.genre}}"/>
    <br />
    <label for="plot">Plot: </label>
    <input type="text" name="plot" value="{{detailsUpdate.plot}}"/>
    <br />
    <label for="cast">Cast: </label>
    <select name="cast" multiple="true">
      {{#each detailsCelebrities}}
          <option value="{{this._id}}">{{this.name}}</option>
      {{/each}}

    </select>
    <br />
    <button class="btn btn-dark">UPDATE</button>

  </form>
</div>